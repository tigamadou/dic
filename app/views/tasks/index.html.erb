<p id="notice"><%= notice %></p>

<h1><%= t("default.tasks") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("default.task.name") %></th>
      <th><%= t("default.task.content") %></th>
      <th><%= t("default.task.expired_at") %></th>
      <th><%= t("default.task.status") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.expired_at %></td>
        <td><%= task.status %></td>
        <td><%= link_to t("default.show"), task %></td>
        <td><%= link_to t("default.edit"), edit_task_path(task) %></td>
        <td><%= link_to t("default.destroy"), task, method: :delete, data: { confirm: t("default.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("default.new_model", :model_name => Task.model_name.human), new_task_path %>

