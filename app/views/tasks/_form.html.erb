<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :expired_at %>
    <%= form.datetime_select :expired_at %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, 
      options_for_select(Task.status_types.map {|key, value| [key.titleize, Task.status_types.key(value)] if key != 'not_set'}),
      { :selected => :status}
    %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, 
      options_for_select(Task.priority_types.map {|key, value| [key.titleize, Task.priority_types.key(value)] }),
      { :selected => :priority}
    %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
